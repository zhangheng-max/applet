.img image{
  width: 100%;
  height: 350rpx;
}
.message{
  position:  absolute;
  top: 25%;
  left: 0;
  right: 0;
  padding: 0 35rpx;
}
.message_item{
  padding: 15rpx;
  box-shadow: 0rpx 5rpx 10rpx #ccc;
  border-radius: 5rpx;
  background: #fff;
  text-indent: 90rpx;
}
.message_item .h4{
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}
.message_item .message_txt{
  font-size: 30rpx;
color: #999;
margin-top: 40rpx;
margin-bottom: 40rpx;
}